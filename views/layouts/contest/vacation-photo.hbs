<form class="form-horizontal" action="/contest/vacation-photo/{{year}}/{{month}}" role="form" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="fieldName" class="col-md-2 control-label">Name</label>
        <div class="col-md-4">
            <input type="text" class="form-control" id="fieldName" name="name">
        </div>
    </div>
    <div class="form-group">
        <label for="fieldEmail" class="col-md-2 control-label">Email</label>
        <div class="col-md-4">
            <input type="text" class="form-control" id="fieldEmail" name="email">
        </div>
    </div>
    <div class="form-group">
        <label for="fieldPhoto" class="col-md-2 control-label">Vacation Photo</label>
        <div class="col-md-4">
            <input type="file" class="form-control" id="fieldPhoto" accept="image/*" name="photo">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4 col-md-offset-2">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>