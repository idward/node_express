<h2>Sign up for our newsletter to receive news and specials!</h2>
<div class="formContainer">
    <form role="form" class="form-horizontal newsletterForm" action="/process-contact?form=newsletter" method="post">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <div class="form-group">
            <label for="fieldName" class="col-md-2 control-label">Name</label>
            <div class="col-md-4">
                <input type="text" class="form-control" id="fieldName" name="name">
            </div>
        </div>
        <div class="form-group">
            <label for="fieldEmail" class="col-md-2 control-label">Email</label>
            <div class="col-md-4">
                <input type="text" class="form-control" id="fieldEmail" name="email">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4 col-md-offset-2">
                <button type="submit" class="btn btn-default">Register</button>
            </div>
        </div>
    </form>
</div>


<script type="text/javascript">
    $(function () {
//        $('button').on('click', function () {
//            alert('form submit');
//            $('.newsletterForm').submit();
//        });

        $('.newsletterForm').on('submit', function (evt) {
            evt.preventDefault();
            var actionUrl = $(this).attr('action');
            $container = $(this).closest('.formContainer');
            $.ajax(
                    {
                        url: actionUrl,
                        type: 'post',
                        data: $('.newsletterForm').serializeArray(),
                        success: function (data) {
                            if(data.success){
                                $container.html('<h2>Thank you!</h2>');
                            }
                        },
                        error: function (error) {
                            console.log(error);
                            $container.html('There was a problem');
                        }
                    }
            );
        });
    })

</script>